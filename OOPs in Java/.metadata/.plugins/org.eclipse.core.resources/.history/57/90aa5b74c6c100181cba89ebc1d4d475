
public class EvenOdd {
	
	public static void evenodd(int num) {
		if(num % 2 == 0){
			System.out.println("Even");
		}
		else if(num % 2 != 0){
			System.out.println("Odd");
		}
		else {
			System.out.println('0');
		}
	}
	
	public static void main(String args[]) {
		int num1 = 10;
		evenodd(num1);
		
		int num2 = 1111;
		evenodd(num2);
		
		int num3 = 0;
		evenodd(num3);
	}
}
