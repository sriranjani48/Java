import java.io.FileInputStream;

public class ReadFile {
	public static void main(String args[]) {
		try {
			FileInputStream fin = new FileInputStream("D:\\Learning Java Programs\\Programs in Java\\Files in Java\\Create File\\MyFile.txt");
			int i = fin.read();
			System.out.print((char) i);
			fin.close();
		} catch (Exception e) {
			System.out.println(e);
		}
	}
}
